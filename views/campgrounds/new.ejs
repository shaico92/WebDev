<%-include('../partials/head')%>


<div class="container">
    <h1 style="text-align: center;">Create new campGround</h1>
    <div class="row">
        <div style="width:30%; margin: 30px auto;">
            <form  action="/campgrounds" method="POST" enctype="multipart/form-data">
                <div class="form-group"><input class="form-control" type="text" name= 'name' placeholder="name"></div>
                <div class="form-group"><input class="form-control" type="number" name= 'price' placeholder="price" step="0.01"></div>
                <div class="form-group"><input class="form-control" type="file"  accept="image/*" name = 'image' placeholder="image url"></div>
                <div class="form-group"><input class="form-control" type="text" name = 'description' placeholder="Description"></div>
                <div class="form-group"><button class="btn btn-primary btn-lg btn-block">Submit!</button></div>
                    </form>
                    <a href="/campgrounds">Go Back</a> 
        </div>  
        
            
    </div>
    
</div>


<script src="/js/generalmethods.js"></script>
<%-include('../partials/foot')%>